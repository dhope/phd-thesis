file = {:home/dhope/Dropbox/Papers to Read/Nov192014/Senner{\_}2014{\_}NoCarryOverEffects{\_}Godwit.pdf:pdf},
isbn = {1932-6203},
issn = {19326203},
journal = {PLoS ONE},
number = {2},
pmid = {24523862},
title = {{An exception to the rule: Carry-over effects do not accumulate in a long-distance migratory bird}},
volume = {9},
year = {2014}
}
