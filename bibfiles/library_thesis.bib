@article{Studds2017,
abstract = {Migratory animals are threatened by human-induced global change. However, little is known about how stopover habitat, essential for refuelling during migration, affects the population dynamics of migratory species. Using 20 years of continent-wide citizen science data, we assess population trends of ten shorebird taxa that refuel on Yellow Sea tidal mudflats, a threatened ecosystem that has shrunk by {\textgreater}65{\%} in recent decades. Seven of the taxa declined at rates of up to 8{\%} per year. Taxa with the greatest reliance on the Yellow Sea as a stopover site showed the greatest declines, whereas those that stop primarily in other regions had slowly declining or stable populations. Decline rate was unaffected by shared evolutionary history among taxa and was not predicted by migration distance, breeding range size, non-breeding location, generation time or body size. These results suggest that changes in stopover habitat can severely limit migratory populations.},
author = {Studds, Colin E. and Kendall, Bruce E. and Murray, Nicholas J. and Wilson, Howard B. and Rogers, Danny I. and Clemens, Robert S. and Gosbell, Ken and Hassell, Chris J. and Jessop, Rosalind and Melville, David S. and Milton, David A. and Minton, Clive D.T. T and Possingham, Hugh P. and Riegen, Adrian C. and Straw, Phil and Woehler, Eric J. and Fuller, Richard A.},
