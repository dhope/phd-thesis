journal = {AUK},
keywords = {ecological barrier; individual-based model; nonsto},
month = {jul},
number = {3},
pages = {363--370},
title = {{Can wheatears weather the Atlantic? Modeling nonstop trans-Atlantic flights of a small migratory songbird}},
volume = {131},
