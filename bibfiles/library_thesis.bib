isbn = {0021-2210},
issn = {1565-9801},
journal = {Israel Journal of Ecology and Evolution},
number = {3},
pages = {297--316},
title = {{It's the "Foodscape", not the Landscape: Using Foraging Behavior to Make Functional Assessments of Landscape Condition}},
volume = {53},
year = {2008}
}
