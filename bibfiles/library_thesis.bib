issn = {0373-2266},
journal = {Ardea},
keywords = {9750 aa haren,animal ecology group,arctic breeding,box 14,centre ecological,evolutionary studies,forage quality,mass,netherlands,nutrient intake,o,p,plant bio,spring staging,stopover sites,university groningen},
number = {3},
pages = {567--577},
publisher = {Nederlandse ornithologische unie},
title = {{Surfing on a green wave - how plant growth drives spring migration in the Barnacle Goose Branta leucopsis}},
