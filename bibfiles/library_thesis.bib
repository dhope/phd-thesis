journal = {Journal of Ornithology},
keywords = {Breeding range,Climate change,Distribution,Migration,Range shift,Wintering range},
number = {3},
pages = {571--579},
title = {{Interpreting seasonal range shifts in migratory birds: A critical assessment of 'short-stopping' and a suggested terminology}},
