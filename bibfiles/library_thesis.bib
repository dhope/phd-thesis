file = {:home/dhope/Dropbox/Papers to Read/LitbeforeTwits/condor-14-166{\%}2E1.pdf:pdf},
isbn = {0010-5422},
issn = {0010-5422},
journal = {The Condor},
keywords = {habitat use,landscape context,migration,prairie wetlands,shorebird,southern great plains,zero-},
