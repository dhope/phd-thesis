journal = {Journal of Avian Biology},
keywords = {Calidris alpina schinzii,East Atlantic Flyway,geolocator,migratory connectivity,wintering site fidelity},
pages = {n/a----n/a},
publisher = {Blackwell Publishing Ltd},
title = {{Migration strategies of the Baltic Dunlin: rapid jump migration in the autumn but slower skipping type spring migration}},
url = {http://dx.doi.org/10.1111/jav.01513},
