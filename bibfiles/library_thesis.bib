issn = {13541013},
journal = {Global Change Biology},
keywords = {Conservation,Global change,Global warming,Range expansion,Range shift,Re-distribution,Shore bird,Special protection area,conservation,global change,global warming,range expansion,range shift,re-distribution,shorebird,special protection area},
mendeley-tags = {conservation,global change,global warming,range expansion,range shift,re-distribution,shorebird,special protection area},
