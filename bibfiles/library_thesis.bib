journal = {AVIAN CONSERVATION AND ECOLOGY},
keywords = {count; distance; double-observer; hawk; monitoring},
month = {dec},
number = {2},
title = {{Detectability of migrating raptors and its effect on bias and precision of trend estimates}},
volume = {11},
year = {2016}
}
