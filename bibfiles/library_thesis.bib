author = {Goss-Custard, John D. and West, Andrew D. and Yates, Michael G. and Caldow, Richard W G and Stillman, Richard A. and Bardsley, Louise and Castilla, Juan and Castro, Macarena and Dierschke, Volker and Sarah, Sarah E A and Eichhorn, Goetz and Ens, Bruno J. and Exo, Klaus Michael and Udayangani-Fernando, P. U. and Ferns, Peter N. and Hockey, Philip A R and Gill, Jennifer A. and Johnstone, Ian and Kalejta-Summers, Bozena and Masero, Jose A. and Moreira, Francisco and Nagarajan, Rajarathina Velu and Owens, Ian P F and Pacheco, Cristian and Perez-Hurtado, Alejandro and Rogers, Danny and Scheiffarth, Gregor and Sitters, Humphrey and Sutherland, William J. and Triplet, Patrick and Worrall, Dave H. and Zharikov, Yuri and Zwarts, Leo and Pettifor, Richard A.},
