doi = {10.1007/s00442-017-3835-2},
file = {:home/dhope/Dropbox/Papers to Read/RedistDunlin{\_}Ydenberg2017.pdf:pdf},
issn = {00298549},
journal = {Oecologia},
keywords = {Effects of top predators,Non-breeding biology,Predator–prey distributions,Raptor population increases,Shorebirds},
number = {4},
pages = {1101--1110},
title = {{The redistribution of non-breeding dunlins in response to the post-DDT recovery of falcons}},
url = {http://dx.doi.org/10.1007/s00442-017-3835-2},
volume = {183},
year = {2017}
}
